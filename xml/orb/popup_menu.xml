<?xml version='1.0'?>
<orb>
	<class name="popup_menu" folder="www/dev/terryf/automatweb_dev/classes/vcl" extends="aw_template">
		<action name="begin_menu">
			<function name="begin_menu">
				<arguments>
					<required name="menu_id" type="string" />
				</arguments>
			</function>
		</action>

		<action name="add_item">
			<function name="add_item">
				<arguments>
					<required name="text" type="string" />
					<required name="link" type="string" />
					<optional name="target" type="string" />
				</arguments>
			</function>
		</action>

		<action name="get_menu">
			<function name="get_menu">
				<arguments>
					<optional name="icon" type="string" />
					<optional name="text" type="string" />
					<optional name="load_on_demand_url" type="string" />
					<optional name="is_toolbar" type="bool" />
				</arguments>
			</function>
		</action>

	</class>
</orb>
